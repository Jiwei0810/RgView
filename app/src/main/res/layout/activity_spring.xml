<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selfView.springActionMenu.SpringActivity">

    <com.rg.rgview.selfView.springActionMenu.ActionMenu
        android:id="@+id/action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:circleRadius="25dp"
        app:dimens="5dp"
        app:animationDuration="3000"
        app:expandDirect="expandDirectRight"
        app:actionMenuIcon="@drawable/ic_mood_happy"/>

</RelativeLayout>